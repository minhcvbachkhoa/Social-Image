<% provide :title, t("pages.home") %>
<% if user_signed_in? %>
  <div class="container">
    <div class="col-md-2 show-list-groups">
      <div class="avatar-small">
        <%= link_to image_tag(avatar_user(current_user)),
          user_path(current_user) %>
        <%= link_to current_user.name, user_path(current_user) %>
      </div>
      <h3><%= t "group-joined" %></h3>
      <div class="list-groups">
        <% @groups.each do |group| %>
          <div class="group-avatar-smaller">
            <%= link_to image_tag(avatar_group(group)), group_path(group) %>
            <%= link_to group.name, group_path(group) %><br>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-10 show-follow-images">
      <div class="new-image">
        <div class="description-field avatar-small">
          <%= link_to image_tag(avatar_user(current_user)),
            user_path(current_user) %>
          <%= text_area :description, t("images.description"),
            class: "form-control", placeholder: t("write-something") %>
        </div>
        <div class="image-file">
          <%= file_field :image, class: "image-file" %>
        </div>
        <div class="actions">
          <%= submit_tag t("upload-image"), class: "btn btn-primary" %>
        </div>
      </div>
      <h3><%= t "recent-activity" %><h3>
      <div class="recent-activity"></div>
    </div>
  </div>
<% else %>
  <div class="show-static-page">
    <div class="center jumbotron">
      <h1><%= t "hello" %></h1>
      <%= link_to new_user_registration_path, class: "btn btn-lg btn-primary" do %>
        <i class="fa fa-user-plus" aria-hidden="true"></i>
        <%= t "sign-up-now" %>
      <% end %>
    </div>
  </div>
<% end %>
<div id="new-group-modal" class="modal fade" role="dialog"></div>
